<struts>

	<package name="book" namespace="/" extends="struts-default">
		<!--通过设置method的值，来确定访问action类中的哪一个方法.-->
		<action name="book_add" class="com.skyhuang.struts2.study.web.controller.BookAction" method="add"></action>
		<action name="book_update" class="com.skyhuang.struts2.study.web.controller.BookAction" method="update"></action>
		<action name="book_delete" class="com.skyhuang.struts2.study.web.controller.BookAction" method="delete"></action>
		<action name="book_search" class="com.skyhuang.struts2.study.web.controller.BookAction" method="search"></action>
